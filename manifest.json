{
	"name": "SimpleKiosk",
	"version": "0.0.1",
	"description": "Implements a simple navigation system for Chrome/ium in Kiosk mode",
	"homepage_url": "https://github.com/devilicecream/simplekiosk",
	"options_page": "options.html",
	"browser_action": {
		"default_popup": "options.html"
	},
	"manifest_version": 2,
	"minimum_chrome_version": "49",
	"permissions": [
        "webNavigation",
		"*://*/*",
		"storage",
		"tabs"
	],
	"icons": {
		"128": "icon.png"
	},
	"background": {
		"scripts": ["js/background.js"]
	},
	"content_scripts": [
		{
			"run_at": "document_start",
			"matches": [
                "*://*/*"
			],
			"css": [
				"css/navigator.css"
			],
			"js": [
				"js/jquery.min.js",
				"js/navigator.js"
			]
		}
	],
    "web_accessible_resources": [
        "img/back.png",
        "img/home.png"
    ]
}